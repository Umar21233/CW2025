<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<StackPane fx:controller="com.comp2042.ui.StatsController"
           prefHeight="800.0" prefWidth="600.0"
           xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">

    <!-- Background -->
    <ImageView fitWidth="600.0" fitHeight="800.0" preserveRatio="false">
        <image>
            <Image url="@../resources/tetris4.png"/>
        </image>
    </ImageView>

    <!-- Main Content -->
    <VBox alignment="CENTER" spacing="30" StackPane.alignment="CENTER">
        <padding>
            <Insets top="80" bottom="80"/>
        </padding>

        <!-- Title -->
        <Label text="PLAYER STATISTICS" styleClass="statsTitle"/>

        <!-- Stats Container -->
        <VBox spacing="18" styleClass="statsMainContainer" maxWidth="450">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <!-- Total Games Played -->
            <HBox spacing="20" alignment="CENTER_LEFT" styleClass="statRow">
                <Label text="Total Games Played:" styleClass="statLabel"
                       maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
                <Label fx:id="lblTotalGames" text="0" styleClass="statNumber"/>
            </HBox>

            <!-- Total Points Scored -->
            <HBox spacing="20" alignment="CENTER_LEFT" styleClass="statRow">
                <Label text="Total Points Scored:" styleClass="statLabel"
                       maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
                <Label fx:id="lblTotalPoints" text="0" styleClass="statNumber"/>
            </HBox>

            <!-- Highest Score -->
            <HBox spacing="20" alignment="CENTER_LEFT" styleClass="statRow">
                <Label text="Highest Score:" styleClass="statLabel"
                       maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
                <Label fx:id="lblHighestScore" text="0" styleClass="statNumber"/>
            </HBox>

            <!-- Highest Combo -->
            <HBox spacing="20" alignment="CENTER_LEFT" styleClass="statRow">
                <Label text="Highest Combo:" styleClass="statLabel"
                       maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
                <Label fx:id="lblHighestCombo" text="0 Lines" styleClass="statNumber"/>
            </HBox>

            <!-- Highest Level -->
            <HBox spacing="20" alignment="CENTER_LEFT" styleClass="statRow">
                <Label text="Max Level Reached:" styleClass="statLabel"
                       maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
                <Label fx:id="lblHighestLevel" text="1" styleClass="statNumber"/>
            </HBox>
        </VBox>

        <!-- Buttons -->
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="btnReset" text="Reset Stats" onAction="#resetStats"
                    prefWidth="140" styleClass="statsButton, resetButton"/>
            <Button fx:id="btnBack" text="Back" onAction="#goBack"
                    prefWidth="140" styleClass="statsButton, backButton"/>
        </HBox>
    </VBox>

    <stylesheets>
        <URL value="@stats_style.css"/>
    </stylesheets>

</StackPane>
