<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import java.net.URL?>

<AnchorPane fx:controller="com.comp2042.ui.MainMenuController"
            maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="800.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">

    <!-- Background image using ImageView -->
    <ImageView fitWidth="600.0" fitHeight="800.0" preserveRatio="false" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0">
        <image>
            <!-- Assuming 'tetris.png' is in src/main/resources/images/ -->
            <Image url="@../resources/tetris1.jpeg"/>
        </image>
    </ImageView>

    <!-- Main Menu Buttons - Using AnchorPane constraints for layout -->

    <Button fx:id="btnPlay" text="Play" onAction="#startGame"
            prefWidth="100.0" AnchorPane.topAnchor="300.0" AnchorPane.leftAnchor="250.0"/>

    <Button fx:id="btnHelp" text="Help" onAction="#showHelp"
            prefWidth="100.0" AnchorPane.topAnchor="350.0" AnchorPane.leftAnchor="250.0"/>

    <Button fx:id="btnExit" text="Exit" onAction="#exitGame"
            prefWidth="100.0" AnchorPane.topAnchor="400.0" AnchorPane.leftAnchor="250.0"/>

    <!-- Optional: Link external CSS if needed -->
    <stylesheets>
        <URL value="@main_menu_style.css" />
    </stylesheets>

</AnchorPane>